<%layout('layouts/boilerplate.ejs')%>
    <div id="cluster-map" class="mb-3"></div>
    <h1 class="mb-3">All Hotels</h1>

    <% for (let hotel of hotels){%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <%if(hotel.images.length){%>
                        <img class="img-fluid mh-100" alt="" src="<%=hotel.images[0].url%>">
                        <%} else {%>
                            <img class="img-fluid mh-100" alt="" src="https://res.cloudinary.com/kpmcloud/image/upload/v1646912615/STAY/nug75g830vi005cniskt.webp">
                            <%}%>
                </div>
                <div class="col-md-8">

                    <div class="card-body">
                        <h5 class="card-title">
                            <%= hotel.name %>
                        </h5>
                        <p class="card-text">
                            <%= hotel.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted"><%= hotel.location%></small>
                        </p>
                        <a class="btn btn-primary" href="/hotels/<%=hotel._id%>">View <%=hotel.name%></a>
                    </div>
                </div>
            </div>
        </div>
        <% }%>
            <script>
                const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
                const hotels = {
                    features: <%- JSON.stringify(hotels) %>
                };
            </script>
            <script src="/scripts/clusterMap.js"></script>